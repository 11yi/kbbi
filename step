#!/bin/bash

split_pdf_to_jpegs() {
  for i in {1485..1489}; do
    convert -density 1200 Kamus-Besar-Bahasa-Indonesia.pdf[$i] /tmp/Z-$i.jpg
  done
}

convert_to_text() {
  find /tmp -maxdepth 1 -type f -iname "Z-*" | xargs -I '{}' tesseract -l ind '{}' '{}'
}

move_text_to_letter_folder() {
  mv /tmp/*.txt text/Z/
}

remove_jpegs() {
  rm /tmp/*.jpg
}

